{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "3.0.0",
  "lastUpdated": "2026-01-02",
  "description": "Complete reference of Homey device capabilities with types, ranges, and properties",
  "capabilities": {
    "onoff": {
      "title": "Turned on",
      "type": "boolean",
      "getable": true,
      "setable": true,
      "uiComponent": "toggle",
      "description": "Turn device on or off",
      "examples": [true, false],
      "notes": "Most common capability for controllable devices"
    },
    "dim": {
      "title": "Dim level",
      "type": "number",
      "getable": true,
      "setable": true,
      "min": 0,
      "max": 1,
      "step": 0.01,
      "decimals": 2,
      "units": "%",
      "uiComponent": "slider",
      "description": "Brightness level from 0 (off) to 1 (full brightness)",
      "examples": [0.5, 0.75, 1],
      "notes": "Common for lights and fans. Multiply by 100 for percentage."
    },
    "light_hue": {
      "title": "Hue",
      "type": "number",
      "getable": true,
      "setable": true,
      "min": 0,
      "max": 1,
      "step": 0.01,
      "decimals": 2,
      "uiComponent": "slider",
      "description": "Color hue value from 0 (red) to 1 (red again, full circle)",
      "examples": [0, 0.33, 0.66, 1],
      "notes": "0=red, 0.33=green, 0.66=blue. For color-capable lights."
    },
    "light_saturation": {
      "title": "Saturation",
      "type": "number",
      "getable": true,
      "setable": true,
      "min": 0,
      "max": 1,
      "step": 0.01,
      "decimals": 2,
      "uiComponent": "slider",
      "description": "Color saturation from 0 (white) to 1 (full color)",
      "examples": [0, 0.5, 1],
      "notes": "For color-capable lights. 0=white, 1=vivid color."
    },
    "light_temperature": {
      "title": "Color Temperature",
      "type": "number",
      "getable": true,
      "setable": true,
      "min": 0,
      "max": 1,
      "step": 0.01,
      "decimals": 2,
      "uiComponent": "slider",
      "description": "Color temperature from 0 (warm) to 1 (cool)",
      "examples": [0, 0.5, 1],
      "notes": "For tunable white lights. 0=warm (~2700K), 1=cool (~6500K)."
    },
    "light_mode": {
      "title": "Light Mode",
      "type": "enum",
      "getable": true,
      "setable": true,
      "values": ["temperature", "color"],
      "uiComponent": "picker",
      "description": "Light color mode selection",
      "examples": ["temperature", "color"],
      "notes": "Switches between color temperature mode and full color mode"
    },
    "target_temperature": {
      "title": "Target temperature",
      "type": "number",
      "getable": true,
      "setable": true,
      "min": 4,
      "max": 35,
      "step": 0.5,
      "decimals": 1,
      "units": "°C",
      "uiComponent": "thermostat",
      "description": "Desired temperature for heating/cooling devices",
      "examples": [20, 21.5, 23],
      "notes": "Default range 4-35°C. Can be customized per device."
    },
    "measure_temperature": {
      "title": "Temperature",
      "type": "number",
      "getable": true,
      "setable": false,
      "units": "°C",
      "decimals": 1,
      "uiComponent": "sensor",
      "description": "Current measured temperature",
      "examples": [20.5, 22.3, 18.0],
      "notes": "Read-only sensor value"
    },
    "measure_humidity": {
      "title": "Humidity",
      "type": "number",
      "getable": true,
      "setable": false,
      "min": 0,
      "max": 100,
      "units": "%",
      "decimals": 0,
      "uiComponent": "sensor",
      "description": "Relative humidity percentage",
      "examples": [45, 60, 75],
      "notes": "Read-only sensor value 0-100%"
