    "measure_battery": {
      "title": "Battery",
      "type": "number",
      "getable": true,
      "setable": false,
      "min": 0,
      "max": 100,
      "units": "%",
      "decimals": 0,
      "uiComponent": "battery",
      "description": "Battery charge level percentage",
      "examples": [100, 50, 25],
      "notes": "0-100%. Triggers low battery warning at 20%."
