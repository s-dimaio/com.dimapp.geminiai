    "measure_co2": {
      "title": "CO₂",
      "type": "number",
      "getable": true,
      "setable": false,
      "units": "ppm",
      "decimals": 0,
      "uiComponent": "sensor",
      "description": "Carbon dioxide level in parts per million",
      "examples": [400, 800, 1200],
      "notes": "<800 good, 800-1200 average, >1200 poor air quality"
    },
    "measure_pm25": {
      "title": "PM2.5",
      "type": "number",
      "getable": true,
      "setable": false,
      "units": "μg/m³",
      "decimals": 0,
      "uiComponent": "sensor",
      "description": "Particulate matter 2.5 micrometers",
      "examples": [10, 25, 50],
      "notes": "<12 good, 12-35 moderate, >35 unhealthy"
    },
    "measure_power": {
      "title": "Power",
      "type": "number",
      "getable": true,
      "setable": false,
      "units": "W",
      "decimals": 2,
      "uiComponent": "sensor",
      "description": "Current power consumption in watts",
      "examples": [50, 250.5, 1500],
      "notes": "Instantaneous power draw"
    },
    "measure_voltage": {
      "title": "Voltage",
      "type": "number",
      "getable": true,
      "setable": false,
      "units": "V",
      "decimals": 1,
      "uiComponent": "sensor",
      "description": "Electrical voltage",
      "examples": [230, 120, 12],
      "notes": "AC or DC voltage measurement"
    },
    "measure_current": {
      "title": "Current",
      "type": "number",
      "getable": true,
      "setable": false,
      "units": "A",
      "decimals": 2,
      "uiComponent": "sensor",
      "description": "Electrical current in amperes",
      "examples": [0.5, 2.3, 10],
      "notes": "Current draw measurement"
