    "meter_power": {
      "title": "Power Meter",
      "type": "number",
      "getable": true,
      "setable": false,
      "units": "kWh",
      "decimals": 2,
      "uiComponent": "sensor",
      "description": "Cumulative energy consumption",
      "examples": [12.5, 450.75, 1250],
      "notes": "Total energy used. Always increases."
    },
    "meter_gas": {
      "title": "Gas Meter",
      "type": "number",
      "getable": true,
      "setable": false,
      "units": "m³",
      "decimals": 2,
      "uiComponent": "sensor",
      "description": "Cumulative gas consumption",
